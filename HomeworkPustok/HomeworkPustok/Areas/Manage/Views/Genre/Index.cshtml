@model List<Genre>
@{
    int count = 1;
}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <table class="table table-striped table-dark">
                <div class="text-center d-flex justify-content-between mb-4 mt-4">
                    <h1 class="text-center">Genre</h1>
                    <a asp-controller="Genre" asp-action="Add"  style="font-weight:700" class="btn btn-success d-flex justify-content-center align-items-center">Add Genre</a>
                </div>
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">Books Count</th>
                        <th scope="col">Buttons</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Genre item in Model)
                    {
                        <tr>
                            <th scope="row">@count</th>
                            <td>@item.Name</td>
                            <td>@item.Books.Count</td>
                            <td><a asp-controller="Genre" asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning">Update</a>
                                <a asp-controller="Genre" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger mx-3">Delete</a></td>
                        </tr>
                        count++;
                    }

                </tbody>
            </table>
        </div>
    </div>

</div>