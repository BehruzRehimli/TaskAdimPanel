@model Genre

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8"> 
            <h3 class="text-center mb-3 mt-5">Update Genre</h3>
            <form method="post" class="form-control"  asp-action="Update">
                <label  asp-for="Name">Genre Name</label><br />
                <input class="form-control mt-3 " asp-for="Name" />
                <span class="text-danger" asp-validation-for="Name"></span>
                <button type="submit" style="width:100%" class="btn btn-primary mt-3">Submit</button>
            </form>
        </div>

    </div>
</div>